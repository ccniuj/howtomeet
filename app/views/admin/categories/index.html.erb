<h1 class="text-center">分類管理</h1>
<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <%= link_to '新增分類', new_admin_category_path, class: "btn btn-primary pull-right" %>
    <br/>
    <br/>
    <table class="table-hover">
      <thead>
        <tr>
          <th colspan="3" class="text-center">名稱</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @admin_categories.each do |category| %>
          <tr>
            <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
            <td><%= category.title %></td>
            <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
            <td><%= link_to '編輯', edit_admin_category_path(category), class: "btn btn-default" %></td>
            <td><%= link_to '刪除', admin_category_path(category), method: :delete, data: { confirm: '確定要刪除?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>