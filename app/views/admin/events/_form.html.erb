<%= simple_form_for [:admin, @admin_meetup, @admin_event] do |f| %>
  <div class="form-group">
    <%= f.input :subject, :label => "活動主題", :input_html => {:class => "form-control"} %></br>
    <%= f.input :subject_en, :label => "英文縮寫", :input_html => {:class => "form-control"} %></br>
    <%= f.input :content, :label => "內容", :input_html => {:class => "form-control", :style => "height: 200px;"} %></br>
    <%= f.input :date, :label => "時間", :input_html => {:class => "form-control"} %></br>
    <%= f.input :place, :label => "地點", :input_html => {:class => "form-control"} %></br>
    <%= f.input :size, :label => "人數", :input_html => {:class => "form-control"} %></br>
    <%= f.input :price, :label => "入場費", :input_html => {:class => "form-control"} %></br>
  </div>
  <%= f.submit "確定", :class => "btn btn-success" %>
<% end %>
